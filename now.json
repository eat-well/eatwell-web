{
  "version": 2,
  "name": "eatwell-web",
  "alias": "eatwell.now.sh",
  "builds": [
    { "src": "api/**/*.js", "use": "@now/node" },
    { "src": "next.config.js", "use": "@now/next" }
  ],
  "routes": [
    {
      "src": "/api/v1/foods/(?<id>[^/]+)",
      "dest": "api/v1/foods/food.js?id=$id"
    }
  ],
  "env": {
    "DB_HOST": "@db_host",
    "DB_USER": "@db_user",
    "DB_PASSWORD": "@db_password",
    "DB_DATABASE": "@db_database"
  }
}
