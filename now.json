{
  "version": 2,
  "name": "eatwell-web",
  "alias": "eatwell.now.sh",
  "builds": [
    { "src": "api/**/*.js", "use": "@now/node" },
    { "src": "next.config.js", "use": "@now/next" }
  ],
  "routes": [
    {
      "src": "/api/v1/search/(?<term>[^/]+)",
      "dest": "api/v1/search/index.js?term=$term"
    },
    {
      "src": "/api/v1/recommendations/(?<cid>[^/]+)",
      "dest": "api/v1/recommendations/index.js?cid=$cid"
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb-uri"
  }
}
